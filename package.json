{
  "name": "@beabee/beabee-common",
  "version": "1.19.6",
  "description": "Shared code between Beabee projects",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "npm run test:types && npm run test:jest",
    "test:deno": "deno task test",
    "test:jest": "jest ./test/node",
    "test:types": "tsc -p tsconfig.build.types.json --noEmit --emitDeclarationOnly false",
    "clear": "rimraf ./dist/",
    "build": "npm run clear && npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "node ./scripts/esbuild.esm.mjs",
    "build:cjs": "node ./scripts/esbuild.cjs.mjs",
    "build:deno": "node ./scripts/esbuild.deno.mjs",
    "build:types": "tsc -p tsconfig.build.types.json",
    "generate:index": "node scripts/generate-index.mjs",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beabee-communityrm/beabee-common.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/beabee-communityrm/beabee-common/issues"
  },
  "homepage": "https://github.com/beabee-communityrm/beabee-common#readme",
  "devDependencies": {
    "@gjsify/esbuild-plugin-transform-ext": "^0.0.4",
    "@tsconfig/recommended": "^1.0.3",
    "esbuild": "^0.19.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "date-fns": "^3.2.0"
  }
}